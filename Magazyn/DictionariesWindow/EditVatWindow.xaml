<Window x:Class="Magazyn.DictionariesWindow.EditVatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magazyn.DictionariesWindow"
        xmlns:dictionariesViewModels="clr-namespace:Magazyn.DictionariesViewModels"
        mc:Ignorable="d"
        Title="EditVatWindow" Height="200" Width="150">
    <Grid>
        <Grid.DataContext>
            <dictionariesViewModels:EditVatViewModel/>
        </Grid.DataContext>
        <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal"/>
            <Label Content="Podaj Kod:"/>
            <TextBox Text="{Binding Path=Vat.Kod}"></TextBox>
            <Label Content="Podaj Vat:"></Label>
            <TextBox Text="{Binding Path=Vat.Vat}"></TextBox>
        <Button Content="Edytuj" Width="100" Height="20" Command="{Binding Path=EditVatItemCommand}"/>
        </StackPanel>
    </Grid>
</Window>
